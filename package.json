{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "node --loader ts-node/esm",
    "mock:server": "json-server ./src/mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/chalk-animation": "^1.6.3",
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/express": "^5.0.2",
    "@types/mime-types": "2.1.2",
    "@types/multer": "1.4.8",
    "@types/node": "^18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "pino-pretty": "^13.0.0",
    "rimraf": "5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "11.5.0",
    "chalk-animation": "^2.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "got": "^14.4.6",
    "http-status-codes": "^2.3.0",
    "inversify": "6.0.1",
    "mime-types": "2.1.35",
    "mongoose": "7.5.3",
    "multer": "1.4.5-lts.1",
    "nanoid": "^5.1.5",
    "pino": "^9.6.0",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1"
  }
}
